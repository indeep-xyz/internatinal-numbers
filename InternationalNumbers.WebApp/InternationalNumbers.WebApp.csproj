    <None Remove="ClientApp\src\assets\images\numbers\arabia\**" />
    <None Remove="ClientApp\src\helpers\NumberDictionary\constants\numbers\**" />
    <None Include="$(SpaRoot)**" Exclude="$(SpaRoot)node_modules\**" />
