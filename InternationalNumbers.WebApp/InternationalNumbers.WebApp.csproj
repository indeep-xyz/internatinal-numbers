    <Compile Remove="ClientApp\src\assets\images\numbers\arabia\**" />
    <Compile Remove="ClientApp\src\helpers\NumberDictionary\constants\numbers\**" />
    <Content Remove="$(SpaRoot)**" />
    <Content Remove="ClientApp\src\assets\images\numbers\arabia\**" />
    <Content Remove="ClientApp\src\helpers\NumberDictionary\constants\numbers\**" />
